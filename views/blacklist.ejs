<!DOCTYPE html>
<html lang="nl-BE">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
    <script src="js/script.js" defer></script>
  </head>
  <body class="grid-container">
    <header>
      <section class="text">
        <h2>The Lord of The Rings</h2>
      </section>
      <div class="dropdown">
        <img
          onclick="myFunction()"
          class="dropbtn"
          src="assets/pngegg (5).png"
          alt=""
        />
        <div id="myDropdown" class="dropdown-content">
          <a href="/">Home</a>
          <a href="quiz.html">THE ONE</a>
          <a href="#">Fifa</a>
          <a href="#">Fortnite</a>
          <a href="#">LegoMasters</a>
          <a href="#">Magic The Gathering</a>
          <a href="#">Nationale Bank (NBB)</a>
          <a href="#">Contact</a>
        </div>
      </div>
    </header>
    <nav class="submenu">
      <ul class="sidenav">
        <li><a href="/LOTR">quiz</a></li>
        <li><a href="/blacklist">blacklist</a></li>
        <li><a href="/favorites">favorite</a></li>
      </ul>
    </nav>
    <main>
      <section class="blacklist_section">
        <article class="blacklist">
          <table class="blacklist-table">
            <tr>
              <th>Quote</th>
              <th>Reden</th>
              <th>Verwijder</th>
            </tr>
            <% for(let i = 0;i<blacklist.length;i++){ %>
             <%- '<tr>' %>
                <%- '<td><a href="/blacklistItem/' + i + '">' + blacklist[i].quote + '</a></td>' %>
                <%- '<td class="reden"><p>' + blacklist[i].reden + '</p></td>' %>
                <%- '<td><a href="/removeblacklistitem/' + i + '"><input type="submit" value="Verwijder"/></a></td>' %>
              <% '</tr>' %>
            <% } %>
          </table>
        </article>
    </section>
    </main>
    <footer>
      <h4>Gemaakt:</h4>
      <ul>
        <li>Jonas Vael</li>
        <li>Yassine Ouadi</li>
        <li>Siemen De Beukelaer</li>
        <li>Karel van Daele</li>
      </ul>
    </footer>
  </body>
</html>
