<!DOCTYPE html>
<html lang="nl-BE">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
    <script src="js/script.js" defer></script>
  </head>
  <body class="grid-container">
    <header>
      <section class="text">
        <h2>The Lord of The Rings</h2>
      </section>
      <div class="dropdown">
        <img
          onclick="myFunction()"
          class="dropbtn"
          src="assets/pngegg (5).png"
          alt=""
        />
        <div id="myDropdown" class="dropdown-content">
          <a href="/">Home</a>
          <a href="quiz.html">THE ONE</a>
          <a href="#">Fifa</a>
          <a href="#">Fortnite</a>
          <a href="#">LegoMasters</a>
          <a href="#">Magic The Gathering</a>
          <a href="#">Nationale Bank (NBB)</a>
          <a href="#">Contact</a>
        </div>
      </div>
    </header>
    <nav class="submenu">
      <ul>
        <li><a href="/LOTR">quiz</a></li>
        <li><a href="/blacklist">blacklist</a></li>
        <li><a href="/favorites">favorite</a></li>
      </ul>
    </nav>
    <main>
      <section class="favorites_section">
      <article class="favorites">
        <a href="/favorites?filter=' + favorites[i].character + '">Toon' + favorites[i].character + 'favorieten</a>
        <table class="favorites-table">
          <tr>
            <th>Quote</th>
            <th>Character</th>
            <th>Verwijder</th>
          </tr>
          <% for(let i = 0;i<favorites.length;i++){ %>
            <%- '<tr>' %>
              <%- '<td>' + favorites[i].quote + '</td>' %>
              <%- '<td><a href="https://lotr.fandom.com/wiki/' + favorites[i].character + '">' + favorites[i].character + '</a></td>' %>
              <%- '<td><a href="/favorites?filter=' + favorites[i].character + '"><input type="submit" value="Toon' + favorites[i].character + '"/></a></td>' %>
              <%- '<td><a href="/removefavorite/' + i + '"><input type="submit" value="Verwijder"/></a></td>' %>
            <%- '</tr>' %>
          <% } %>
        </table>
        <form action="printFavorites" method="post">
        <button type="submit">Print favorites</button>
        </form>
      </article>
    </section>
    </main>
    <footer>
      <h4>Gemaakt:</h4>
      <ul>
        <li>Jonas Vael</li>
        <li>Yassine Ouadi</li>
        <li>Siemen De Beukelaer</li>
        <li>Karel van Daele</li>
      </ul>
    </footer>
  </body>
</html>